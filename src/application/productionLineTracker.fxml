<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<TabPane fx:id="tabPaneOuter" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
         prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.201"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
    <Tab text="Product Line">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <GridPane layoutX="14.0" layoutY="14.0" prefHeight="106.0" prefWidth="568.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="278.0" minWidth="10.0" prefWidth="99.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="469.0" minWidth="10.0" prefWidth="469.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label alignment="CENTER" prefHeight="17.0" prefWidth="287.0" text="Product Name"/>
                <TextField fx:id="productNameTextField" GridPane.columnIndex="1"/>
                <TextField fx:id="manufacturerTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label alignment="CENTER" prefHeight="17.0" prefWidth="282.0" text="Manufacturer "
                       GridPane.rowIndex="1"/>
                <Label alignment="CENTER" prefHeight="17.0" prefWidth="285.0" text=" Item Type"
                       GridPane.rowIndex="2"/>
                <ChoiceBox fx:id="itemTypeChoiceBox" prefHeight="25.0" prefWidth="468.0" GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>
            </GridPane>
            <Button fx:id="addProductBtn" layoutX="487.0" layoutY="132.0" mnemonicParsing="false"
                    onAction="#addProductBtnPushed" text="Add Product"/>
            <Label alignment="CENTER" layoutX="16.0" layoutY="177.0" prefHeight="17.0" prefWidth="566.0"
                   text="Existing Products"/>
            <TableView fx:id="existingProductsTableView" layoutX="16.0" layoutY="198.0" prefHeight="158.0"
                       prefWidth="570.0">
                <columns>
                    <TableColumn fx:id="existingProdId" prefWidth="142.5" text="Product ID" />
                    <TableColumn fx:id="existingProdName" prefWidth="142.5" text="Product Name"/>
                    <TableColumn fx:id="existingProdManu" prefWidth="142.5" text="Manufacturer"/>
                    <TableColumn fx:id="existingProdType" prefWidth="142.5" text="Type"/>
                </columns>
            </TableView>
        </AnchorPane>
    </Tab>
    <Tab text="Produce">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" text="Choose Product:"/>
            <ListView fx:id="chooseProductListView" layoutX="116.0" layoutY="14.0" prefHeight="66.0"
                      prefWidth="465.0"/>
            <Label alignment="CENTER" layoutY="98.0" prefHeight="17.0" prefWidth="115.0" text="Choose Quantity:"/>
            <ComboBox fx:id="chooseQuantityComboBox" layoutX="117.0" layoutY="94.0" prefHeight="25.0"
                      prefWidth="464.0"/>
            <Button fx:id="recordProductBtn" layoutX="450.0" layoutY="132.0" mnemonicParsing="false"
                    onAction="#recordProductBtnPushed" text="Record Production"/>
        </AnchorPane>
    </Tab>
    <Tab text="Production Log">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <TextArea fx:id="productionLogTextArea" layoutX="14.0" layoutY="14.0" prefHeight="344.0"
                      prefWidth="574.0"/>
        </AnchorPane>
    </Tab>
</TabPane>
